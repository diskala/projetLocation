{% extends 'base.html.twig' %}
{% block title %}Erreurs{% endblock %}
{% block stylesheets %}
	 
{% endblock %}
{% block body %}
    <div style="background-image: url('/images/bugatti-divo-2.jpg'); background-size: cover; background-position: center; height: 100vh; display: flex; align-items: center; justify-content: center;">
      <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container" style="margin-top:5rem">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1 style="color:blue; font-size:30px; font-weight:bold;">
                    Oops! {{ status_code }} </h1>
                <h2 style="margin-top:2rem;color:blue; font-size:30px; font-weight:bold;">
                    Error  {{ status_text }} </h2>
                <div class="error-details" style="margin-top:2rem; fony-size:30px;">
                    Désolé, une erreur s'est produite, page demandée introuvable !
                </div>
                <div class="error-actions" style="margin-top:2rem">
                    <a href={{ path('app_home') }} class="btn btn-danger btn-lg"><span class="glyphicon glyphicon-home"></span>
                        Retournez à la page d'accueil </a>&emsp;<a href="http://www.jquery2dotnet.com" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-envelope"></span> Contact Support </a>
                </div>
            </div>
        </div>
    </div>
</div>
  
{% endblock %}


                    <button class="carousel-btn next" id="nextBtn">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
                
                <div class="carousel-track-container">
                    <div class="carousel-track" id="carouselTrack">
                        <!-- Images réduites pour éviter les erreurs -->
						{# {% for item in pictures %}
							{{ dump(item.image1) }}
							
						{% endfor %} #}
                      
                        <div class="carousel-slide">
                            <div class="carousel-image">
                                <img src="{{ asset('pictures/voiture2.jpg') }}" alt="Voiture de luxe 2">
                                <div class="carousel-overlay">
                                    <button class="quick-view-btn" onclick="window.location.href='{{ path('app_allcars_') }}'">
                                        <i class="fas fa-eye"></i>
                                        Voir détails
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-slide">
                            <div class="carousel-image">
                                <img src="{{ asset('pictures/voiture3.jpg') }}" alt="Voiture de luxe 3">

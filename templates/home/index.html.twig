                            <div class="carousel-image">
                                <img src="{{ asset('pictures/voiture5.jpg') }}" alt="Voiture de luxe 5">
                                <div class="carousel-overlay">
                                    <button class="quick-view-btn" onclick="window.location.href='{{ path('app_allcars_') }}'">
                                        <i class="fas fa-eye"></i>
                                        Voir détails
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-slide">
                            <div class="carousel-image">
                                <img src="{{ asset('pictures/voiture6.jpg') }}" alt="Voiture de luxe 6">
                                <div class="carousel-overlay">
                                    <button class="quick-view-btn" onclick="window.location.href='{{ path('app_allcars_') }}'">
                                        <i class="fas fa-eye"></i>
                                        Voir détails
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-slide">
                            <div class="carousel-image">
                                <img src="{{ asset('pictures/voiture7.jpg') }}" alt="Voiture de luxe 7">
                                <div class="carousel-overlay">
                                    <button class="quick-view-btn" onclick="window.location.href='{{ path('app_allcars_') }}'">
                                        <i class="fas fa-eye"></i>
                                        Voir détails
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="carousel-cta">
                <a href="{{ path('app_allcars_') }}" class="cta-button">
                    <span>EXPLORER TOUTE LA COLLECTION</span>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</section>

        <!-- Section Contact Call-to-Action -->
        <section class="contact-cta-section">
            <div class="container">
                <div class="cta-content">
                    <div class="cta-text">
                        <h2>Besoin d'un conseil personnalisé ?</h2>
                        <p>Notre équipe d'experts est à votre disposition pour vous accompagner dans le choix de votre véhicule de prestige.</p>
                        <div class="cta-features">
                            <div class="feature">
                                <i class="fas fa-clock"></i>
                                <span>Disponible 7j/7</span>
                            </div>
                            <div class="feature">
                                <i class="fas fa-truck"></i>
                                <span>Livraison France entière</span>
                            </div>
                            <div class="feature">
                                <i class="fas fa-star"></i>
                                <span>Service premium</span>
                            </div>
                        </div>
                    </div>
                    <div class="cta-actions">
                        <button class="cta-btn primary" id="appel">
                            <i class="fas fa-phone"></i>
                            DEMANDE DE RAPPEL
                        </button>
                        <a href="{{ path('app_contact') }}" class="cta-btn secondary">
                            <i class="fas fa-envelope"></i>
                            NOUS CONTACTER
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>

    {{ include("./_partials/inviteContact.html.twig") }}
    {{ include("./_partials/footer.html.twig") }}
	<script src="{{ asset('./js/home.js') }}" defer></script>
{% endblock %}